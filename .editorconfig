###############################
# Core EditorConfig Options   #
###############################
# All files
root = true
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
# Project files
[*.{csproj,json,md,nuspec,yml,targets,props}]
indent_size = 2
[*.{sln,xml}]
indent_style = tab
